{
	"name": "flixerr",
	"version": "1.5.8",
	"description": "A movie torrent streaming service.",
	"main": "main.js",
	"build": {
		"appId": "com.flixerr.app",
		"productName": "Flixerr",
		"directories": {
			"output": "./build"
		},
		"publish": {
			"provider": "github"
		},
		"mac": {
			"target": [
				"zip"
			],
			"hardenedRuntime": true,
			"category": "public.app-category.entertainment",
			"icon": "./assets/imgs/icon.icns"
		},
		"dmg": {
			"artifactName": "${name}.installer.${ext}"
		},
		"win": {
			"target": [
				"nsis"
			],
			"icon": "./assets/imgs/icon.ico"
		},
		"nsis": {
			"deleteAppDataOnUninstall": true,
			"createDesktopShortcut": true,
			"createStartMenuShortcut": true,
			"shortcutName": "Flixerr",
			"artifactName": "flixerr.setup.${version}.${ext}"
		},
		"linux": {
			"target": [
				"deb"
			],
			"category": "video"
		}
	},
	"scripts": {
		"start": "electron .",
		"compile": "babel ./assets/js --out-dir dist/js",
		"build": "electron-builder --dir",
		"build-all": "electron-builder --dir -mwl",
		"pack": "electron-builder",
		"pack-all": "electron-builder -mwl",
		"publish": "npm run compile && npm run pack-all"
	},
	"author": "Flixerr <ceo@flixerr.co>",
	"devDependencies": {
		"babel-cli": "^6.26.0",
		"babel-core": "^6.26.3",
		"electron": "^5.0.13",
		"electron-builder": "^21.2.0",
		"electron-notarize": "^0.1.1"
	},
	"dependencies": {
		"@ffmpeg-installer/ffmpeg": "^1.0.20",
		"accurate-interval": "^1.0.9",
		"axios": "^0.19.2",
		"babel-polyfill": "^6.26.0",
		"babel-preset-env": "^1.7.0",
		"babel-preset-react": "^6.24.1",
		"babel-preset-stage-0": "^6.24.1",
		"babel-register": "^6.26.0",
		"charset-detector": "0.0.2",
		"cheerio": "^1.0.0-rc.3",
		"decompress": "^4.2.0",
		"download": "^7.1.0",
		"electron-json-storage": "^4.1.8",
		"electron-squirrel-startup": "^1.0.0",
		"electron-titlebar": "0.0.3",
		"electron-updater": "^4.2.5",
		"electron-window-state": "^5.0.3",
		"encoding": "^0.1.12",
		"fast-average-color": "^5.2.1",
		"ffmpeg": "0.0.4",
		"firebase": "^6.6.2",
		"franc-min": "^4.1.1",
		"fs-extra": "^8.1.0",
		"get-json": "^1.0.1",
		"https-proxy-agent": "^2.2.4",
		"langs": "^2.0.0",
		"movie-trailer": "^2.0.6",
		"parse-torrent-name": "^0.5.4",
		"pluralize": "^8.0.0",
		"puppeteer": "^2.1.1",
		"react": "^16.13.1",
		"react-dom": "^16.13.1",
		"react-lazy-load": "^3.0.13",
		"react-reveal": "^1.2.2",
		"react-transition-group": "^1.2.1",
		"torrent-search-api": "^2.1.1",
		"uniqid": "^4.1.1",
		"webtorrent": "^0.107.17",
		"webtorrent-health": "^1.1.2"
	}
}
